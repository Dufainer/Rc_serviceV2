@model Rc_serviceV2.Models.PrestadoresDeServicio

@{
    ViewData["Title"] = "Details";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card bg-dark rounded-lg" style="width: 80%;">
        <div class="card-header">
            <h1 class="card-title text-light">INFORMACION</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="text-light">Proveedor</h4>
                    <hr class="bg-light" />
                    <dl class="text-light">
                        <dt>Id del proveedor</dt>
                        <dd>@Html.DisplayFor(model => model.IdPrestador)</dd>
                        <dt>Nombres</dt>
                        <dd>@Html.DisplayFor(model => model.NamePrestador)</dd>
                        <dt>Apellidos</dt>
                        <dd>@Html.DisplayFor(model => model.LastnamePrestador)</dd>
                        <dt>Celular</dt>
                        <dd>@Html.DisplayFor(model => model.Celular)</dd>
                        <dt>Email</dt>
                        <dd>@Html.DisplayFor(model => model.Email)</dd>
                        <dt>Ubicacion</dt>
                        <dd>@Html.DisplayFor(model => model.UbicacionId)</dd>
                        <dt>Servicio</dt>
                        <dd>@Html.DisplayFor(model => model.ServiciosIdServicioNavigation.TipoServicio)</dd>
                        
                    </dl>
                </div>
            </div>
            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.IdPrestador" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Regresar</a>
            </div>
        </div>
    </div>
</div>

