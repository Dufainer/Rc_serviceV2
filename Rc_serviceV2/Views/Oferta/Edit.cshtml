@model Rc_serviceV2.Models.Oferta

@{
    ViewData["Title"] = "Edit";
}

<div class="container-contact100">
    <div class="wrap-contact100 bg-dark">
        <form id="editForm" class="contact100-form text-light" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3 class="contact100-form-title">Editar Oferta</h3>
                    <div class="form-group">
                        <input type="hidden" asp-for="IdOfertas" class="form-control bg-dark text-light">
                    </div>
                    <div class="form-group">
                        <select asp-for="InmueblesIdInmueble" class="form-control bg-dark text-light" placeholder="Inmueble" asp-items="ViewBag.InmueblesIdInmueble"></select>
        
                    </div>
                    <div class="form-group">
     
                        <select asp-for="ServiciosIdServicio" class="form-control bg-dark text-light" placeholder="Servicio" asp-items="ViewBag.ServiciosIdServicio"></select>
                    </div>
                    <div class="container-contact100-form-btn">
                        <button type="submit" value="Save" class="btn btn-primary">Editar</button>
                    </div>

            <div class="container-contact100-form-btn">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <script>
        $(function () {
            $('#editForm').submit(function (e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Deseas gauradar los cambios?',
                    showDenyButton: true,
                    showCancelButton: true,
                    confirmButtonText: 'Guardar',
                    denyButtonText: "No guardar"
                }).then((result) => {
                    if (result.isConfirmed) {
                        setTimeout(function () {
                            $('#editForm').unbind('submit').submit();
                        });
                    } else if (result.isDenied) {
                        Swal.fire('Cambios no guardados', '', 'info');
                    }
                });
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
