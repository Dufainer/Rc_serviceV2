@model Rc_serviceV2.Models.Inmueble

@{
    ViewData["Title"] = "Create";
}
<head>
    <!-- Incluye las bibliotecas de jQuery y jQuery UI -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
</head>


<h1>Create</h1>

<h4>Inmueble</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Tipo Inmueble</label>
                <input asp-for="TipoInmueble" class="form-control" />
                <span asp-validation-for="TipoInmueble" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetallesInmueble" class="control-label"></label>
                <input asp-for="DetallesInmueble" class="form-control" />
                <span asp-validation-for="DetallesInmueble" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UbicacionId" class="control-label"></label>
                <input asp-for="UbicacionId" class="form-control" />
                <span asp-validation-for="UbicacionId" class="text-danger"></span>
            </div>

            @*<div class="form-group">
            <label asp-for="PropietariosIdPropietario" class="control-label"></label>
            Html.DropDownList("IdPropietario", ViewData["PropietariosIdPropietario"] as SelectList, "--Seleccione--", new { @class = "form-control" })
            <select asp-for="PropietariosIdPropietario" class ="form-control" asp-items="ViewBag.PropietariosIdPropietario"></select>
            </div>*@

            @*ESTE CODIGO ES DEL BUSCADOR QUE AUTOCOMPLETA*@
            <div class="ui-widget">
                <label asp-for="PropietariosIdPropietario" class="control-label"></label>
                <input type="text" name="PropietariosIdPropietario" id="propietario" class="form-control" />
            </div>

            @*ACA TERMINA EL CODIGO DEL AUTOCOMPLETADO*@

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $("#propietario").autocomplete({
            source: '@Url.Action("GetPropietario", "Inmuebles")',
            minlenght: 2
        })
    </script>
}
