@model Rc_serviceV2.Models.Inmueble

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Inmueble</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdInmueble" />
            <div class="form-group">
                <label asp-for="TipoInmueble" class="control-label"></label>
                <input asp-for="TipoInmueble" class="form-control" />
                <span asp-validation-for="TipoInmueble" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetallesInmueble" class="control-label"></label>
                <input asp-for="DetallesInmueble" class="form-control" />
                <span asp-validation-for="DetallesInmueble" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UbicacionId" class="control-label"></label>
                <input asp-for="UbicacionId" class="form-control" />
                <span asp-validation-for="UbicacionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropietariosIdPropietario" class="control-label"></label>
                <input type="text" name="PropietariosIdPropietario" id="propietario" value="@ViewBag.PropietarioValue" class="form-control" />
                <span asp-validation-for="PropietariosIdPropietario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $("#propietario").autocomplete({
                source: '@Url.Action("GetPropietario", "Inmuebles")',
                minLength: 2,
                select: function (event, ui) {
                    $(this).val(ui.item.value);
                    $("input[name='PropietariosIdPropietario']").val(ui.item.value);
                    return false;
                }
            });
        });
    </script>
}


