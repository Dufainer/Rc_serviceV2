@model Rc_serviceV2.Models.Servicio

@{
    ViewData["Title"] = "Create";
}

<style>

    .row{
        width: 460px;
        height: 90%;
        padding: 30px;
        align-items: center;
        align-content: center;
        /*text-align: center;*/
        margin-left: 29%;
        margin-right: 29%;
    }

</style>

<h3 style="text-align: center; padding-top :20px">Agregar nuevo servicio</h3>


<hr />
<div class="row" style="border: 2px 5px solid #000000;box-shadow: 0 0 10px rgba(0, 0, 0, 0.8); border-radius:30px ">
    
        <form asp-action="Create" id="createForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipoServicio" class="control-label"></label>
                <input asp-for="TipoServicio" class="form-control" />
                <span asp-validation-for="TipoServicio" class="text-danger"></span>            </div>
            <br />
            <div class="form-group">
                <label asp-for="DetallesServicio" class="control-label"></label>
                <input asp-for="DetallesServicio" class="form-control" />
                <span asp-validation-for="DetallesServicio" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>
            <br />


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Volver</a>
            </div>
        </form>
    
</div>


    


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(function () {
            $('#createForm').submit(function (e) {
                e.preventDefault(); // Evitar que el formulario se envíe de forma predeterminada

                // Mostrar la alerta de éxito de SweetAlert
                Swal.fire({
                    icon: 'success',
                    title: '¡Éxito!',
                    text: 'Se ha creado el servicio con éxito.'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Enviar el formulario para crear el servicio
                        $('#createForm').unbind('submit').submit();
                    }
                });
            });
        });
    </script>
}
