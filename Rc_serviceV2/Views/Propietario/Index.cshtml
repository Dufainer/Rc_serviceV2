@model IEnumerable<Rc_serviceV2.Models.Propietario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NamePropietario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastnamePropietario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UbicacionId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamePropietario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastnamePropietario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UbicacionId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPropietario">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPropietario">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPropietario">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.2/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.11.2/js/jquery.dataTables.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('#example').DataTable();
        });
    </script>
}
